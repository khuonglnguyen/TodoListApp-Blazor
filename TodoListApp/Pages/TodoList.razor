@page "/todo-list"
@using TodoListApp.Components

<h3>TodoList</h3>

@if (Tasks == null)
{
   <Loading></Loading>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Priority
                </th>
                <th>Assignee</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Tasks)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Priority</td>
                    <td>@item.AssigneeName</td>
                    <td>@item.CreatedDate.ToString("dd/MM/yyy hh:mm")</td>
                    <td>@item.Status</td>
                </tr>
            }

        </tbody>
    </table>
}